{
  "manifest_version": 2,

  "name": "Your Life Activity",
  "description": "Tracking daily activities from the browser.",
  "version": "1.3",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Your Life Activity"
  },
    "permissions": [
        "<all_urls>",
        "notifications",
        "storage"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
