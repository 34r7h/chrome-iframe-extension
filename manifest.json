{
  "manifest_version": 2,

  "name": "Mini Browse",
  "background": {
    "scripts":["background.js"]
  },
  "description": "Popup tab for quick browsing",
  "omnibox": {"keyword":"min"},
  "version": "0.4",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Mini Browse"

  },
    "permissions": [
        "<all_urls>",
        "notifications",
        "storage"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'"
}
